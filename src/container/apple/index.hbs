<div class="page">
  <div class="header">
    {{#with header}}
    <header class="header_content">
      <div class="header_block">
        <img src="./svg/apple.svg" alt="Apple" class="header_icon">
        <nav class="header_block">
          {{#each links}}
          <a href="{{url}}" class="header_link">{{text}}</a>
          {{/each}}
        </nav>
      </div>
      <div class="header_action">
        <img src="./svg/search.svg" alt="Search" class="header_icon">
        <img src="./svg/profile.svg" alt="Profile" class="header_icon">
      </div>
    </header>
    {{/with}}
  </div>
  <div class="header-ad">
    {{#with header.ad}}
    <header class="header_content ad_content">
      <div class="header_block ad__title">
        {{title}}
      </div>

      <div class="header__block">
        {{#with link}}
        <a href="{{link}}" class="ad__link">{{text}}</a>
        {{/with}}
      </div>
    </header>
    {{/with}}
  </div>

  {{#with iphone_pro}}
